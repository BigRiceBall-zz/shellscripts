        <!-- e.g. nameservice-namenode, cluster-1-nn-1-->--> 
        <namenode id="nn-1" ip="192.168.1.31"/>
        <namenode id="nn-2" ip="192.168.1.158"/>
        <journalnode id="jn-1" ip="192.168.1.158"/>
    </nameservice>
</configuration>
